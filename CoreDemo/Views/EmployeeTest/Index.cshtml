@using CoreDemo.Controllers
@model List<Class1>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Adı Soyadı</th>
        <th>Sil</th>
        <th>Düzenle</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.ID</td>
            <td>@item.Name</td>
            <td><a href="/EmployeeTest/DeleteEmployee/@item.ID/" class="btn btn-outline-danger"></a>Sil</td>
            <td><a href="/EmployeeTest/EditEmployee/@item.ID/" class="btn btn-outline-success"></a>Düzenle</td>
            <td></td>

        </tr>
    }

</table>

<td><a href="/EmployeeTest/Add/" class="btn btn-outline-primary"></a>Yeni Çalışan Girişi</td>
